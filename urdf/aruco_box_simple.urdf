<?xml version="1.0"?>
<robot name="aruco_box">
  
  <!-- Base link representing the box with ArUco marker -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="1.0 1.0 1.0"/>
      </geometry>
      <material name="white">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>
    
    <collision>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="1.0 1.0 1.0"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.167" ixy="0.0" ixz="0.0"
               iyy="0.167" iyz="0.0"
               izz="0.167"/>
    </inertial>
  </link>

  <!-- Gazebo material and physics properties -->
  <gazebo reference="base_link">
    <!-- Default material - this will be overridden by world file parameter -->
    <material>ArUco/Case1Single</material>
    <static>true</static>
    
    <surface>
      <friction>
        <ode>
          <mu>1.0</mu>
          <mu2>1.0</mu2>
        </ode>
      </friction>
      <contact>
        <ode>
          <kp>1000000.0</kp>
          <kd>1.0</kd>
        </ode>
      </contact>
    </surface>
  </gazebo>

</robot>